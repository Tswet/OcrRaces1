<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/singleRaceIcon"
        android:layout_width="128dp"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/singleRaceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/singleRaceIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singleRaceShortDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/singleRaceName"
        app:layout_constraintStart_toStartOf="@+id/singleRaceName"
        app:layout_constraintTop_toBottomOf="@+id/singleRaceName" />

    <TextView
        android:id="@+id/singleRaceDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/singleRaceShortDescription"
        app:layout_constraintStart_toStartOf="@+id/singleRaceShortDescription"
        app:layout_constraintTop_toBottomOf="@+id/singleRaceShortDescription" />

</android.support.constraint.ConstraintLayout>